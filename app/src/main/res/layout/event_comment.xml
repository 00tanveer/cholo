<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="20dp"
    android:paddingBottom="10dp">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/profile_pic"
        android:layout_width="100px"
        android:layout_height="100px"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:background="@drawable/profile_pic"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="12dp"
        android:layout_marginRight="8dp"/>
    <TextView
        android:id="@+id/eventName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tanveer Fahad Haq"
        android:textSize="45px"
        android:textStyle="bold"
        android:layout_toRightOf="@id/profile_pic"
        android:layout_alignTop="@id/profile_pic"/>
    <TextView
        android:id="@+id/date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dec 7 at 7:58pm"
        android:textSize="25px"
        android:layout_below="@id/eventName"
        android:layout_alignLeft="@id/eventName" />
    <TextView
        android:id="@+id/comment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Had great fun last night! You guys were amazing. Surely hoping to come next year!"
        android:textSize="45px"
        android:layout_below="@id/profile_pic"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="7dp"
        />
    <TextView
        android:id="@+id/wide_smiley_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="34"
        android:textSize="30px"
        android:layout_below="@id/comment"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="60px"
        android:layout_marginLeft="12dp"
        android:layout_marginBottom="20px"/>
    <ImageButton
        android:id="@+id/wide_smiley"
        android:layout_width="80px"
        android:layout_height="80px"
        android:layout_below="@id/comment"
        android:layout_toRightOf="@id/wide_smiley_number"
        android:background="@drawable/wide_smiley"
        android:layout_marginTop="5dp"/>
    <TextView
        android:id="@+id/nay_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="4"
        android:textSize="30px"
        android:layout_below="@id/comment"
        android:layout_toRightOf="@id/wide_smiley"
        android:layout_marginTop="60px"
        android:layout_marginLeft="15dp"/>
    <ImageButton
        android:id="@+id/nay_emoji"
        android:layout_width="85px"
        android:layout_height="80px"
        android:layout_below="@id/comment"
        android:layout_toRightOf="@id/nay_number"
        android:background="@drawable/nay_emoji"
        android:layout_marginTop="5dp"/>
    <TextView
        android:id="@+id/wut_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="3"
        android:textSize="30px"
        android:layout_below="@id/comment"
        android:layout_toRightOf="@id/nay_emoji"
        android:layout_marginTop="60px"
        android:layout_marginLeft="15dp"/>
    <ImageButton
        android:id="@+id/wut_emoji"
        android:layout_width="85px"
        android:layout_height="80px"
        android:layout_below="@id/comment"
        android:layout_toRightOf="@id/wut_number"
        android:background="@drawable/wut_emoji"
        android:layout_marginTop="5dp"/>
</RelativeLayout>
</android.support.v7.widget.CardView>
