<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_event_room"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.root.listexample.message_app.EventRoomActivity">
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorPrimary"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        app:titleTextColor="#fff"
        app:layout_scrollFlags="scroll|enterAlways|snap" >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ToggleButton
                android:id="@+id/followButton"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:background="@drawable/buttonshape"
                android:textOff="FOLLOW"
                android:textOn="FOLLOWING"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="15dp"/>
        </RelativeLayout>
        </android.support.v7.widget.Toolbar>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/toolbar">
        <RelativeLayout
            android:id="@+id/commentBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#f2edf7"
            android:layout_alignParentBottom="true">
            <ImageButton
                android:id="@+id/camera"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_camera"
                android:scaleX="1.2"
                android:scaleY="1.2"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="8dp"
                />
            <ImageButton
                android:id="@+id/sendButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:background="@android:drawable/ic_menu_send"
                android:scaleX="1.2"
                android:scaleY="1.2"
                android:layout_marginTop="5dp"
                android:layout_marginRight="5dp"/>
            <EditText
                android:id="@+id/sendText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Type your message..."
                android:textColorHint="#aaa4b1"
                android:layout_marginRight="45dp"
                android:layout_marginLeft="45dp"
                android:inputType="textMultiLine"
                android:enabled="true"
                android:isScrollContainer="true"
                android:cursorVisible="true"
                android:maxHeight="150dp">
            </EditText>
        </RelativeLayout>
        <android.support.v7.widget.RecyclerView
            android:id="@+id/messagesList"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_above="@+id/commentBar" />
    </RelativeLayout>
</RelativeLayout>
