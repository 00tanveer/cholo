<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#f2edf7"
    android:id="@+id/parent"
    android:orientation="vertical"
    android:layout_marginBottom="20dp"
    >

    <com.android.volley.toolbox.NetworkImageView
        android:layout_width="match_parent"
        android:layout_height="355dp"
        android:id="@+id/imageView2"
        android:scaleType="centerCrop"
        />

    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/tickets"
        android:scaleType="fitXY"
        android:id="@+id/imageView4"
        android:layout_below="@id/imageView2"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="70dp"/>

    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/directions"
        android:scaleType="fitXY"
        android:id="@+id/imageView5"
        android:layout_marginRight="70dp"

        android:layout_alignTop="@+id/imageView4"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="70dp" />

    <TextView
        android:text="Greenstone Fire Concert 2016"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/eventName"
        android:textColor="#ffffff"
        android:background="#6888"
        android:textSize="12pt"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:paddingTop="8dp"
        android:layout_alignTop="@+id/imageView2"
        android:layout_alignLeft="@+id/imageView2"
        android:layout_alignStart="@+id/imageView2" />

    <TextView
        android:text="Banani Army Stadium"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/eventLocation"
        android:textColor="#ffffff"
        android:background="#6888"
        android:textSize="8pt"
        android:layout_below="@+id/eventName"
        android:layout_alignLeft="@+id/eventName"
        android:layout_alignStart="@+id/eventName"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"/>
    <TextView
        android:text="2 January 2016"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/eventDate"
        android:textColor="#ffffff"
        android:background="#6888"
        android:textSize="6pt"
        android:layout_below="@+id/eventLocation"
        android:layout_alignLeft="@+id/eventLocation"
        android:layout_alignStart="@+id/eventLocation"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        />
    <TextView
        android:text="9am to 8pm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/eventTime"
        android:textColor="#ffffff"
        android:background="#6888"
        android:textSize="6pt"
        android:layout_below="@+id/eventDate"
        android:layout_alignLeft="@+id/eventDate"
        android:layout_alignStart="@+id/eventDate"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:paddingBottom="4dp"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#9222"
        android:layout_alignBottom="@id/imageView2">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <TextView
            android:text="398"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/going"
            android:textColor="#ffffff"
            android:textSize="25pt"
            android:layout_marginLeft="12dp"
            />
        <TextView
            android:text="going"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView5"
            android:textColor="#ffffff"
            android:textSize="6pt"
            android:layout_marginLeft="4dp"
            android:layout_marginBottom="8dp"
            android:layout_below="@id/going"
            android:layout_alignLeft="@+id/going"
            android:layout_alignStart="@+id/going"
            />
        <TextView
            android:text="456"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/interested"
            android:textColor="#ffffff"
            android:textSize="15pt"
            android:layout_toRightOf="@id/going"
            android:layout_marginLeft="13dp"
            android:layout_alignBaseline="@id/going"
            />
        <TextView
            android:text="interested"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView7"
            android:textColor="#ffffff"
            android:textSize="6pt"
            android:layout_below="@id/interested"
            android:layout_alignLeft="@id/interested"
            android:layout_alignBaseline="@id/textView5"
            />

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                app:srcCompat="@drawable/rsvp_"
                android:id="@+id/rsvpButton"
                android:layout_alignBottom="@+id/interested"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="25dp"
                android:layout_marginEnd="25dp"
                android:layout_marginTop="23dp" />

            <ImageView
                android:layout_width="28dp"
                android:layout_height="28dp"
                app:srcCompat="@drawable/chat_white"

                android:id="@+id/eventRoomButton"
                android:layout_alignBottom="@+id/rsvpButton"
                android:layout_toLeftOf="@+id/rsvpButton"
                android:layout_toStartOf="@+id/rsvpButton"
                android:layout_marginRight="25dp"
                android:layout_marginEnd="25dp" />
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>
