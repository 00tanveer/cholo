<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/image"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/concert"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="12dp"/>
        <TextView
            android:id="@+id/eventName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rocknation Fire Concert 2016"
            android:textSize="16dp"
            android:typeface="sans"
            android:textStyle="bold"
            android:layout_toRightOf="@id/image"
            android:layout_alignTop="@id/image"
            android:layout_marginLeft="8dp"/>

        <TextView
            android:id="@+id/time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2:00 AM"
            android:textSize="12dp"
            android:layout_alignTop="@id/eventName"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="12dp"/>

        <TextView
            android:id="@+id/last_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="hi what is up with you man bla bla bla bla bla bla bla blabl bal lalalaldfskdf "
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_below="@+id/eventName"
            android:layout_alignLeft="@+id/eventName"
            android:layout_alignStart="@+id/eventName"
            android:layout_marginRight="12dp"/>
    </RelativeLayout>
</android.support.v7.widget.CardView>